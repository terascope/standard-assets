{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "disableReferencedProjectLoad": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": ["test"],
    "references": [
        {
            "path": "packages/standard-asset-apis"
        },
        {
            "path": "asset"
        }
    ]
}
