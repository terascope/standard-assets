{
    "name": "standard-assets-bundle",
    "version": "0.13.0",
    "description": "Teraslice standard processor asset bundle",
    "private": true,
    "workspaces": [
        "asset"
    ],
    "scripts": {
        "asset:build": "yarn && yarn run build",
        "build": "rm -rf asset/dist; tsc --project tsconfig.json",
        "build:watch": "yarn build --watch",
        "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
        "lint:fix": "yarn lint --fix",
        "setup": "yarn && yarn build",
        "test": "jest",
        "test:watch": "jest --coverage=false --notify --watch --onlyChanged",
        "test:debug": "env DEBUG=\"${DEBUG:-*teraslice*}\" jest --detectOpenHandles --coverage=false --runInBand"
    },
    "resolutions": {
        "@terascope/utils": "^0.43.0"
    },
    "devDependencies": {
        "@terascope/eslint-config": "^0.6.1",
        "@terascope/job-components": "^0.55.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.2",
        "@types/json2csv": "^5.0.3",
        "@types/node": "^16.10.1",
        "@types/node-gzip": "^1.1.0",
        "@types/timsort": "^0.3.0",
        "axios": "^0.21.4",
        "eslint": "^8.0.1",
        "jest": "^27.2.4",
        "jest-extended": "^0.11.5",
        "teraslice-test-harness": "^0.28.2",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.3"
    },
    "engines": {
        "node": ">=10.16.0"
    },
    "dependencies": {}
}
