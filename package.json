{
    "name": "standard-assets-bundle",
    "version": "0.11.2",
    "description": "Teraslice standard processor asset bundle",
    "private": true,
    "workspaces": [
        "asset"
    ],
    "scripts": {
        "asset:build": "yarn && yarn run build",
        "build": "rm -rf asset/dist; tsc --project tsconfig.json",
        "build:watch": "yarn build --watch",
        "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
        "lint:fix": "yarn lint --fix",
        "setup": "yarn && yarn build",
        "test": "jest",
        "test:watch": "jest --coverage=false --notify --watch --onlyChanged",
        "test:debug": "env DEBUG=\"${DEBUG:-*teraslice*}\" jest --detectOpenHandles --coverage=false --runInBand"
    },
    "resolutions": {
        "@terascope/utils": "^0.40.2"
    },
    "devDependencies": {
        "@terascope/eslint-config": "^0.6.0",
        "@terascope/job-components": "^0.52.2",
        "@types/jest": "^26.0.23",
        "@types/json2csv": "^5.0.2",
        "@types/node": "^15.12.2",
        "@types/node-gzip": "^1.1.0",
        "@types/timsort": "^0.3.0",
        "eslint": "^7.28.0",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "teraslice-test-harness": "^0.28.0",
        "ts-jest": "^26.5.6",
        "typescript": "^4.3.2"
    },
    "engines": {
        "node": ">=10.16.0"
    },
    "dependencies": {}
}
